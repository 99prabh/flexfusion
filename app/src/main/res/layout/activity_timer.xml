<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp">
    <ImageView
        android:id="@+id/img_repetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_repetitions"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_repetitions"
        android:text="Repetitions"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp">
    <ImageView
        android:id="@+id/img_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reset"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_rest"
        android:text="Rest"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_set1"
        android:layout_centerInParent="true"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start/Restart"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:layout_below="@id/img_set"
        android:background="@drawable/custom_button"
        android:textAlignment="center"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:backgroundTint="#D60101"
        android:layout_alignParentRight="true"
        android:paddingHorizontal="65dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:layout_below="@id/img_set"
        android:background="@drawable/custom_button"
        android:textAlignment="center"
        />
</RelativeLayout>