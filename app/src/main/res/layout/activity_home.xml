<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.flexfusion.Home">
    <ImageView
        android:id="@+id/img_calender"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_calender"
        android:padding="10dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_bold_chart"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/ic_water_intake"
        android:layout_width="250dp"
        android:layout_height="270dp"
        android:src="@drawable/ic_water_intake"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_calender"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_water_intake"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_add" />
    <TextView
        android:id="@+id/tv_water_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5L - 25 %"
        android:textSize="18sp"
        android:layout_below="@id/ic_add"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.5L - 25 %"
        android:textColor="#8E8E8E"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ic_add"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/roboto"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_level_home"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_water_percentage"
        android:paddingHorizontal="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_water_drop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_water"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="#2293E9"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto"
                android:text="Water"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_diet"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_diet"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_diet"
                android:textColor="#2293E9"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto"
                android:text="Diet"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_fitness"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fitness"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_fitness"
                android:textSize="12sp"
                android:layout_marginTop="9dp"
                android:textColor="#2293E9"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto"
                android:text="Fitness"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_profile"
                android:textColor="#2293E9"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto"
                android:text="Profile"/>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>