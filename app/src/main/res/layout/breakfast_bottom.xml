<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_egg_fried"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Egg (Fried)"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:layout_marginTop="3dp"
        android:background="#707070"
        android:layout_below="@id/tv_egg_fried" />

    <LinearLayout
        android:id="@+id/lyt_qty_serving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_corners"
            android:hint="Quantity"
            android:fontFamily="@font/roboto"
            android:textColorHint="@color/black"
            android:textSize="12sp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_serving_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/roboto"
            android:background="@drawable/round_corners"
            android:hint="Serving Size"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/black"
            android:textSize="12sp"
            android:padding="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total :"
        android:layout_below="@id/lyt_qty_serving"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_light"
        android:layout_marginHorizontal="30dp" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 g"
        android:layout_below="@id/tv_title_total"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginHorizontal="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Food"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:paddingHorizontal="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:layout_below="@id/lyt_qty_serving"
        android:background="@drawable/custom_button"
        android:textAlignment="center" />
</RelativeLayout>