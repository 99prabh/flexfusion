<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp"
    tools:context=".History">

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="History"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        />
    <RelativeLayout
        android:id="@+id/lyt_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_history"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="30dp">
        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:id="@+id/tv_this_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Week"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:id="@+id/tv_this_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This Month"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_medium"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/Ic_line_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_line"
        android:layout_below="@id/lyt_history"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ic_line_history"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_graph"/>
</RelativeLayout>